@model IEnumerable<WebApplication1.Models.Expenditure>

@{
    ViewBag.Title = "Expenditure";
}

<h2>Expenditure</h2>

<p>
    @Html.ActionLink("Thêm mới", "create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Ngày 
        </th>
        <th>
            Tổng Tiền
        </th>
        <th>
            Ghi Chú
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Date.ToString("dd/MM/yyyy")
        </td>
        <td>
            @item.Amount.ToString("N0")
        </td>
        <td>
            <pre>@item.Note</pre>
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.STT }) |
            @Html.ActionLink("Xem", "Details", new { id=item.STT }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.STT })
        </td>
    </tr>
}

</table>
